<%- contentFor('meta') %>
<title>Public Burger Index</title>

<%- contentFor('styles') %>

<%- contentFor('scripts') %>

<%- contentFor('body') %>
<div id="burgers-index" class="container my-3 ">
  <h1 class="burgers-index-text mb-3 mt-5 text-center">Create and Rate Burgers</h1>

  <!-- <- include('_partials/filter') %> -->
  <h2>Newest Burgers</h2>
  <% if (burgers.length > 0) { %>
    <div id="burgers-list" class="row align-items-center g-3 text-center">
      <% burgers.forEach(function(burger){ %>
        <% const ingredients = JSON.parse(burger.ingredients) %>


  <div class="col-md-4">
    <div class="card">
      <div id="top-ingredient" class="d-flex flex-column w-100 align-items-center">
        <% ingredients.topBun.forEach(function(ingredient) { %>
          <img src='/assets/<%= ingredient %>.png'>
        <% }) %>
      </div>
      <div id="mid-ingredient" class="d-flex flex-column w-100 align-items-center">
        <% ingredients.middle.forEach(function(ingredient) { %>
          <img src='/assets/<%= ingredient %>.png'>
        <% }) %>
      </div>
      <div id="bot-ingredient" class="d-flex flex-column w-100 align-items-center">
        <% ingredients.botBun.forEach(function(ingredient) { %>
          <img src='/assets/<%= ingredient %>.png'>
        <% }) %>
      </div>
      <div class="card-body">
        <h5 class="card-title text-truncate"><a class="show-btn font-weight-bold" href="/burgers/<%= burger.id %>"><%= burger.burgerName %></a></h5>
        <p class="burger-card-description card-text text-truncate"><%= burger.description %></p>
      </div>
    </div>
  </div>
        <% }) %>
  </div>



    <!-- <- include('_partials/pagination') %> -->
  <% } else { %>
    <div>No Burgers</div>
  <% } %>
</div>

<!-- <- include('../../_partials/modal') %> -->
