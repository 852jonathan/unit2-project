    <%- contentFor('meta') %>
    <title>Update Your Burger</title>

    <%- contentFor('styles') %>

    <%- contentFor('scripts') %>
    <script src="/js/form-control.js" defer></script>

    <%- contentFor('body') %>
    <div id="show-burger" class="container my-3 ">
      <h1 class="burgers-title-text mb-3 mt-5 text-center">Rate The Burger</h1>




      <div class="row">

          <div class="col-6">
            <div id="selected-ingredient" >
              <div id="top-ingredient" class="text-center">
                <% ingredients.topBun.forEach(function(ingredient) { %>
                  <img src='/assets/<%= ingredient %>.png'>
                <% }) %>
              </div>
              <div id="mid-ingredient" class="d-flex flex-column mx-auto">
              <% ingredients.middle.forEach(function(ingredient) { %>
                <img src='/assets/<%= ingredient %>.png'>
              <% }) %>
            </div>
              <div id="bot-ingredient" class="text-center">
                <% ingredients.botBun.forEach(function(ingredient) { %>
                  <img src='/assets/<%= ingredient %>.png'>
                <% }) %>
              </div>
            </div>
          </div>
          <div class="col-6 ms-auto">
            <div>
              <div class="mb-3">
                <h2 class="mb-3">
                  <%= burger.burgerName %>
                  <% if (currentUser) { %>
                    <a href="/my/burgers/<%= burger.id %>" class="edit-btn font-weight-bold">
                    <button class="edit-btn btn btn-info btn-sm" href="/my/burgers/<%= burger.id %>"><i class="fas fa-edit"></i></button>

                      <% } %>
                  </a>
                </h2>

                <h3 class="mb-3">DESCRIPTION: </h3>
                  <h4> <%= burger.description%></h4>
              </div>
              <div>
                <h3 class="mb-3">INGREDIENTS:</h3>

              </div>
              <div id="top-ingredient" class="text-center">
                <% ingredients.topBun.forEach(function(ingredient) { %>
                  <div><%= ingredient %></div>
                <% }) %>
              </div>
              <div id="mid-ingredient" class="d-flex flex-column mx-auto">
              <% ingredients.middle.forEach(function(ingredient) { %>
                <div ><%= ingredient %></div>
              <% }) %>
            </div>
              <div id="bot-ingredient" class="text-center">
                <% ingredients.botBun.forEach(function(ingredient) { %>
                  <div ><%= ingredient %></div>
                <% }) %>
              </div>

                <% if (currentUser) { %>
                  <!-- <div class="star-wrapper"> -->
                    <h3>COMMENT AND GIVE YOUR RATING</h3>
                    <div class="star-rating me-auto">
                      <input type="radio" name="rate" class="hide" id="rate-1">
                      <label for="rate-1" class="fas fa-star"></label>
                      <input type="radio" name="rate" class="hide" id="rate-2">
                      <label for="rate-2" class="fas fa-star"></label>
                      <input type="radio" name="rate" class="hide" id="rate-3">
                      <label for="rate-3" class="fas fa-star"></label>
                      <input type="radio" name="rate" class="hide" id="rate-4">
                      <label for="rate-4" class="fas fa-star"></label>
                      <input type="radio" name="rate" class="hide" id="rate-5">
                      <label for="rate-5" class="fas fa-star"></label>
                    </div>



                    <form id="comment-form">

                    <input type="name" class="form-control" id="comment" name="comment" value="<%= burger.comment %>">
                    <div id="comment-help" class="form-text">Place a short comment here</div>
                    <div class="comment-btn mx-auto mt-3">
                      <button type="submit" id="rate-btn" class="btn-warning col-3">RATE!</button>
                    </div>
                  <!-- </div> -->
                </div>
                <% } %>
              </div>

            </div>
          </div>
      </div>
    </div>
