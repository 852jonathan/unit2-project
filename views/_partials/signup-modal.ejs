<script>
  $(document).ready(function() {
    $signupModal = $('#signup-modal')
    $loginModal = $('#login-modal')
    $signupForm = $('#signup-form')


    $signupModal.on('click', '#login-in-signup', function(e) {
      e.preventDefault()
      $signupModal.modal('hide')
      $loginModal.modal('show')
    })


    $signupModal.on('click', '#signup-form-submit', function(e) {
      e.preventDefault()
      const formData = new FormData($signupForm[0])

      axios({
        method: 'POST',
        url: '/api/auth/signup',
        data: formData,
        withCredentials: true
      }).then(function() {
        $signupModal.modal('hide')
        window.location.reload()
      }).catch(function(err) {
        switch (err.response.status) {
          case 406: {
            const { response: { data: { errors } }} = err

            $signupModal.find('.invalid-feedback').empty()
            $signupModal.find('.is-invalid').removeClass('is-invalid')

            errors.forEach(function(error) {
              const { param: fieldName, msg } = error
              const $input = $signupModal.find(`[name="${fieldName}"]`)
              const $invalidFeedback = $input.siblings('.invalid-feedback')
              $input.addClass('is-invalid')
              $invalidFeedback.text(msg)
            })
            break
          }
          default: {
            console.log(err.response)
            break
          }
        }
      })
    })
  })
</script>

<div id="signup-modal" class="modal fade" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header d-flex justify-content-center ps-5">
        <h5 class="modal-title pt-0 mx-auto flex-fill">REGISTER</h5>
        <button type="button" class="btn-close ms-auto ps-0" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <form id="signup-form" novalidate>
          <div class="form-group mt-3 mb-3">
            <label>EMAIL:</label>
            <input class="form-control" type="email" name="email">
            <div class="invalid-feedback"></div>
          </div>
          <div class="form-group mt-3 mb-3">
            <label>PASSWORD:</label>
            <input class="form-control" type="password" name="password">
            <div class="invalid-feedback"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer py-0">

        <button type="button" id="signup-form-submit" class="btn btn-warning mx-auto mt-3">REGISTER</button>

      </div>
      <button type="button" id="login-in-signup" class="btn btn-link mt-0" data-target="#login-modal"  data-dismiss="modal" data-toggle="modal">
        Already have an account? Login here! </button>
    </div>
  </div>
</div>
